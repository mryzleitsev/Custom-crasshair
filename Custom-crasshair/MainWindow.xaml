<Window x:Class="Custom_crosshair_Overlay.Curstom_crosshair_MainGUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Crosshair Overlay" Width="585" ResizeMode="CanMinimize"
        Loaded="Window_Loaded" Unloaded="Window_Unloaded" SizeToContent="Height">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14" />
            <RowDefinition Height="23" />
            <RowDefinition Height="5" />
            <RowDefinition Height="22" />
            <RowDefinition Height="5" />
            <RowDefinition Height="22" />
            <RowDefinition Height="5" />
            <RowDefinition Height="22" />
            <RowDefinition Height="5" />
            <RowDefinition Height="22" />
            <RowDefinition Height="5" />
            <RowDefinition Height="22" />
            <RowDefinition Height="15" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition />
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="cmb_Processes" Margin="89,0,80,0" Grid.Column="1" Grid.Row="1" />
        <Label Content="Select Process : " HorizontalAlignment="Left" Margin="0,0,0,0" Grid.Column="1"
               VerticalAlignment="Center" Grid.Row="1" Padding="5,0,0,0" />
        <Button Content="Load" HorizontalAlignment="Right" Margin="0" Width="75" Grid.Column="1" Grid.Row="1"
                Click="LoadSelectedProcess_Click" />
        <Button Content="Reload Processes" Grid.Column="1" HorizontalAlignment="Right" Margin="0" Grid.Row="3"
                Width="108" Click="ReloadProcesses_Click" />
        <Label Content="Total Processes :" Grid.Column="1" HorizontalAlignment="Left" Margin="0" Grid.Row="3"
               VerticalAlignment="Center" Padding="5,0,0,2" />
        <Label Content="0" Name="lbl_procCount" Grid.Column="1" HorizontalAlignment="Left" Margin="91,0,0,0"
               Grid.Row="3" VerticalAlignment="Center" Padding="5,0,0,0" />
        <Label Content="Attached To :" Grid.Column="1" HorizontalAlignment="Left" Margin="0" Grid.Row="5"
               Padding="5,0,0,0" VerticalAlignment="Center" />
        <Label Content="None" Name="lbl_attachTo" Grid.Column="1" HorizontalAlignment="Left" Margin="74,0,0,0"
               Grid.Row="5" Padding="5,0,0,0" VerticalAlignment="Center" />
        <Label Content="Crosshair Scale :" Grid.Column="1" HorizontalAlignment="Left" Margin="0" Grid.Row="7"
               Padding="5,0,0,0" VerticalAlignment="Center" />
        <Label Content="2" Name="lbl_crosshairScale" Grid.Column="1" HorizontalAlignment="Left" Margin="90,0,0,0"
               Grid.Row="7" Padding="5,0,0,0" VerticalAlignment="Center" />
        <Button Content="-" Grid.Column="1" HorizontalAlignment="Right" Margin="0" Grid.Row="7" Padding="0"
                FontWeight="Bold" Width="25" Click="ReduceCrosshairScale_Click" />
        <Button Content="+" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,30,0" Grid.Row="7" Padding="0"
                FontWeight="Bold" Width="25" HorizontalContentAlignment="Center" Click="IncreaseCrosshairScale_Click" />
        <Label Content="Crosshair Color :" Grid.Column="1" HorizontalAlignment="Left" Margin="0" Grid.Row="9"
               Padding="5,0,0,0" VerticalAlignment="Center" />
        <ComboBox x:Name="cmb_color" Margin="97,0,80,0" Grid.Column="1" Grid.Row="9" />
        <Button Content="Set Color" HorizontalAlignment="Right" Margin="0" Width="75" Grid.Column="1" Grid.Row="9"
                Click="ChangeCrosshairColor_Click" />
        <Label Content="Crosshair Transparency :" Grid.Column="1" HorizontalAlignment="Left" Margin="0" Grid.Row="11"
               Padding="5,0,0,0" VerticalAlignment="Center" />
        <Slider Grid.Column="1" Grid.Row="11" Margin="137,2,0,0" Padding="0" Maximum="255" SmallChange="1"
                LargeChange="5" Value="100" ValueChanged="CrosshairTransparency_ValueChanged" />
       
    </Grid>
</Window>